{
  "name": "remix-kysely-d1",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "deploy": "npm run build && wrangler pages deploy ./build/client",
    "dev": "remix vite:dev",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "start": "wrangler pages dev ./build/client",
    "typecheck": "tsc",
    "typegen": "wrangler types && bash scripts/generate-type-from-db.sh",
    "preview": "npm run build && wrangler pages dev ./build/client",
    "build-cf-types": "wrangler types",
    "format": "pnpm format:sql",
    "format:sql": "sql-formatter db/schema.sql --fix -c sql-formatterrc.json",
    "migrate:gen": "bash scripts/generate-migration.sh",
    "migrate:apply": "wrangler d1 migrations apply remix-kysely-d1 --local",
    "migrate:apply:prd": "wrangler d1 migrations apply remix-kysely-d1 --remote"
  },
  "dependencies": {
    "@remix-run/cloudflare": "^2.8.1",
    "@remix-run/cloudflare-pages": "^2.8.1",
    "@remix-run/react": "^2.8.1",
    "isbot": "^4.1.0",
    "kysely": "0.27.3",
    "kysely-d1": "0.3.0",
    "miniflare": "^3.20231030.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@ariga/atlas": "0.21.1",
    "@cloudflare/workers-types": "^4.20240329.0",
    "@remix-run/dev": "^2.8.1",
    "@tailwindcss/vite": "4.0.0-alpha.11",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "better-sqlite3": "9.4.5",
    "eslint": "^8.38.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "kysely-codegen": "^0.14.2",
    "node-fetch": "^3.3.2",
    "sql-formatter": "15.3.0",
    "tailwindcss": "4.0.0-alpha.11",
    "typescript": "^5.1.6",
    "vite": "^5.1.0",
    "vite-tsconfig-paths": "^4.2.1",
    "wrangler": "^3.24.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
